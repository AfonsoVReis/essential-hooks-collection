{
  "name": "essential-hooks-collection",
  "version": "1.0.1",
  "description": "A collection of essential React hooks",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --out-dir dist",
    "docs:deploy": "gh-pages -d docs",
    "docs:serve": "npx http-server ./docs",
    "docs": "typedoc",
    "lint:fix": "eslint src --fix",
    "lint": "eslint src",
    "prepublishOnly": "npm run build",
    "release": "standard-version",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test": "jest --passWithNoTests",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AfonsoVReis/essential-hooks-collection.git"
  },
  "keywords": [
    "react",
    "hooks",
    "typescript",
    "useState",
    "useEffect"
  ],
  "author": "Afonso V. Reis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AfonsoVReis/essential-hooks-collection/issues"
  },
  "homepage": "https://github.com/AfonsoVReis/essential-hooks-collection#readme",
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged",
      "pre-push": "npm test"
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.10",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.4.3",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.6",
    "tsup": "^8.4.0",
    "typedoc": "^0.27.9",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  }
}
